{
  "manifest_version": 3,
  "name": "WorkFlowy Reminder Plus",
  "version": "3.5.12",
  "description": "Enhanced WorkFlowy reminder and task management tool",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://workflowy.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://workflowy.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 